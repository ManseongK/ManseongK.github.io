<p id="p1">복사하고 싶은 텍스트</p>
<button onclick="copyToClipboard('#p1')">텍스트 복사</button>

<script>
function copyToClipboard(element) {
var $temp = $("<input>");
  $("body").append($temp);
  $temp.val($(element).text()).select();
document.execCommand("copy");
  $temp.remove();
alert("copy complete"); //Optional Alert, 삭제해도 됨
}
</script>
